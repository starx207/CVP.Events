@page "/newevent"
@using CVP.Events.Api.Sdk.Requests
@using CVP.Events.Contracts.Responses
@using System.ComponentModel.DataAnnotations
@using CVP.Events.Models
@rendermode InteractiveServer

@inject IEventsApi _eventsApi
@inject NavigationManager _navManager

<PageTitle>Create Event - CVP Events</PageTitle>

<div class="create-event-page">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">Create New Event</h1>
                <p class="page-subtitle">Add a new event to your calendar</p>
            </div>
            <a href="/" class="btn btn-outline-light">
                Back to Events
            </a>
        </div>
    </div>

    <div class="form-container">
        <EditForm Model="@eventModel" OnValidSubmit="@HandleSubmitAsync" FormName="CreateEventForm">
            <DataAnnotationsValidator />

            <div class="form-card">
                <div class="form-group">
                    <label for="title" class="form-label">Title *</label>
                    <InputText id="title" @bind-Value="eventModel.Title" class="form-control" placeholder="Add a title" />
                    <ValidationMessage For="@(() => eventModel.Title)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" @bind-Value="eventModel.Description" class="form-control" rows="4" placeholder="Describe what you'll be doing (optional)" />
                    <ValidationMessage For="@(() => eventModel.Description)" class="validation-message" />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="startDate" class="form-label">Starting *</label>
                        <InputDate Type="InputDateType.DateTimeLocal" id="startDate" @bind-Value="eventModel.StartDate" class="form-control" />
                        <ValidationMessage For="@(() => eventModel.StartDate)" class="validation-message" />
                    </div>

                    <div class="form-group">
                        <label for="endDate" class="form-label">Ending *</label>
                        <InputDate Type="InputDateType.DateTimeLocal" id="endDate" @bind-Value="eventModel.EndDate" class="form-control" />
                        <ValidationMessage For="@(() => eventModel.EndDate)" class="validation-message" />
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="@(() => _navManager.NavigateTo("/"))" disabled="@isSubmitting">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Creating...</span>
                        }
                        else
                        {
                            <span>Create Event</span>
                        }
                    </button>
                </div>
            </div>
        </EditForm>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            <strong>Error:</strong> @errorMessage
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            <strong>Success:</strong> @successMessage
        </div>
    }
</div>

@code {
    private CreateEventVM eventModel = new();
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;

    private async Task HandleSubmitAsync()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;
            successMessage = null;

            var request = new CreateEventRequest
            {
                Title = eventModel.Title,
                Description = eventModel.Description ?? string.Empty,
                StartDate = eventModel.StartDate,
                EndDate = eventModel.EndDate
            };

            var response = await _eventsApi.CreateEventAsync(request);

            successMessage = $"Event '{response.Title}' created successfully!";

            // Navigate back to home page after a brief delay
            await Task.Delay(1500);
            _navManager.NavigateTo($"/?filter={response.Title}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to create event: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
